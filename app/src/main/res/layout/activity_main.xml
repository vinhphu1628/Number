    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="?android:attr/actionModeCloseDrawable" />
        <TextView
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time" />
        <TextView
            android:id="@+id/date"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/time"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"/>

        <TextView
            android:id="@+id/wifi_status"
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:layout_toLeftOf="@id/imgWifi"
            android:text="IP Address is: " />

        <TextView
            android:id="@+id/txtIPAddress"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@id/wifi_status"
            android:layout_toLeftOf="@id/imgWifi"
            android:text="" />
        <ImageView
            android:id="@+id/imgWifi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_signal_wifi_off_bar_black_48dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtPinCode"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:hint="Enter 5 number"
                android:inputType="numberPassword"
                android:singleLine="true"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNum1"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="1" />

                <Button
                    android:id="@+id/btnNum2"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="2" />

                <Button
                    android:id="@+id/btnNum3"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="3" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="Delete" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNum4"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="4" />

                <Button
                    android:id="@+id/btnNum5"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="5" />

                <Button
                    android:id="@+id/btnNum6"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="6" />

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="Clear All" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNum7"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="7" />

                <Button
                    android:id="@+id/btnNum8"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="8" />

                <Button
                    android:id="@+id/btnNum9"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="9" />

                <Button
                    android:id="@+id/btnShow"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="Show/Hide" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNum0"
                    android:layout_width="400dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:text="0" />

                <Button
                    android:id="@+id/btnEnter"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:text="Enter" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>